{
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "expo-router": [
        "./node_modules/expo-router"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2020",
    "target": "es2017",
    "moduleResolution": "node"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "i18n-js.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "extends": "expo/tsconfig.base"
}
